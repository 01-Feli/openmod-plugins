@inherits LayoutComponentBase

<MudThemeProvider Theme="@_currentTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <NavBar OnThemeRotateRequest="@(() => RotateTheme())"/>

    <MudMainContent>
        <MudContainer>

            @code {
#if DEBUG
                bool _isDebug = true;
#else
                bool _isDebug = false;
#endif
            }

            @* todo: remove when the site is done (including <br/>) *@
            @if (!_isDebug)
            {
                <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined">The site is in development and may not work correctly.</MudAlert>
                <br/>
                <br/>
                <br/>
            }

            @Body
        </MudContainer>
        <MudScrollToTop TopOffset="400">
            <MudFab Icon="@Icons.Material.Filled.KeyboardArrowUp" Color="Color.Primary"/>
        </MudScrollToTop>
    </MudMainContent>
</MudLayout>
