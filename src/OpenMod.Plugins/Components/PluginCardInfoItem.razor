<MudText Typo="Typo.body1" Style="display: inline-flex;">
    <MudIcon Size="Size.Medium" Icon="@Icon" Style="@(IsFirst ? "margin-right: 5px;" : "margin-left: 5px; margin-right: 5px;")"/>
    @ChildContent
</MudText>

@code {

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public bool IsFirst { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}
